<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/signupbg"
    tools:context=".SignupActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/montserrat_subrayada_bold"
        android:text="SignUp"
        android:textSize="44dp"
        android:textColor="#fff"
        android:textStyle="bold"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:text="Please sign up to continue"
        android:textColor="#fff"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="75dp"/>
    <EditText
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:background="@drawable/signupbutton"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="70dp"
        android:hint="Phne Number"
        android:padding="15dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_mail_black_24dp"
        android:textColorHint="#fff"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:background="@drawable/signupbutton"
        android:layout_marginTop="310dp"
        android:layout_marginLeft="70dp"
        android:hint="OTP"
        android:padding="15dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_lock_outline_24dp"
        android:textColorHint="#fff"
        android:textColor="#ffffff"/>
    <EditText
        android:layout_width="270dp"
        android:layout_height="52dp"
        android:background="@drawable/signupbutton"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="70dp"
        android:hint="Password"
        android:padding="15dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_lock_outline_24dp"
        android:textColorHint="#fff"
        android:textColor="#ffffff"/>
    <Button
        android:id="@+id/start"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="@drawable/sliderect"
        android:layout_marginTop="490dp"
        android:layout_marginLeft="130dp"
        android:text="Start!"
        android:textColor="#fff"
        android:textSize="24dp"
        />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="122dp"
        android:text="Login"
        android:textColor="#fff" />


</RelativeLayout>